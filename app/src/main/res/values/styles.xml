<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Headline1">
        <item name="android:fontFamily">@font/roboto_condensed_regular</item>
        <item name="android:textSize">25sp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textColor">@color/headLine1</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>


    </style>

    <style name="SmallHeadline">

        <item name="android:fontFamily">@font/roboto_condensed_regular</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textColor">@color/smallHeadline</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="textStyle">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">17sp</item>

        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>


    </style>

    <style name="Body1">
        <item name="android:fontFamily">@font/prose</item>
        <item name="android:textSize">18sp</item>

        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>


    </style>

    <style name="Subtitle1">
        <item name="android:fontFamily">@font/alaskan</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textColor">@color/headLine1</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="BigText">
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/grey</item>
    </style>
    <style name="BigTextSmallSize" parent="BigText">
        <item name="android:textSize">15sp</item>
    </style>
    <style name="MyHeadline">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="HeadlineThinItalic">
        <item name="android:fontFamily">@font/roboto_thin</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">italic</item>
    </style>


    <style name="rate_star" parent="Widget.AppCompat.RatingBar.Small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:isIndicator">true</item>
        <item name="android:progressTint">@color/colorPrimary</item>
    </style>

    <style name="rate_line" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:max">100</item>
        <item name="android:progress">45</item>
        <item name="android:progressTint">@color/colorPrimary</item>
    </style>

    <style name="general_enter_text" >
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ems">10</item>
        <item name="android:fontFamily">@font/roboto_condensed_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:background">@drawable/border_radius_background</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginStart">50dp</item>
        <item name="android:layout_marginEnd">50dp</item>
    </style>

    <style name="FW_MHeadline">
        <item name="android:layout_marginTop">7dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:fontFamily">@font/trebuchet_bd</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/grey_text</item>
    </style>
</resources>



