<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/grey">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:background="@color/appColorWhite"
        android:orientation="vertical"
        android:id="@+id/flowerItemMainPaneLinerLayout">

        <com.facebook.drawee.view.SimpleDraweeView
            android:layout_width="400dp"
            android:layout_height="400dp"
            android:layout_margin="5dp"
            android:background="@color/grey"
            android:id="@+id/flowerItemSimpleDraweeView"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20sp"
            android:layout_marginTop="20sp"
            android:fontFamily="sans-serif-condensed-medium"
            android:textColor="@color/black"
            android:textSize="30sp"
            tool:text="85 000 руб"
            android:id="@+id/flowerItemProductPriceTextView"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20sp"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/black"
            android:textSize="25sp"
            tool:text="Розы"
            android:id="@+id/flowerItemProductNameTextView"/>

        <RatingBar
            style="@style/Widget.AppCompat.RatingBar.Indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:isIndicator="true"
            android:max="5"
            android:numStars="5"
            android:progress="4"
            android:progressTint="@color/goldForRatingBar"
            android:id="@+id/flowerItemRatingBar"/>

        <Button
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="80dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/button_styles"
            android:fontFamily="sans-serif-condensed-medium"
            android:textColor="@color/appColorWhite"
            android:textSize="20sp"
            android:id="@+id/flowerItemBuyButton"
            tool:text="Купить" />
    </LinearLayout>

</RelativeLayout>