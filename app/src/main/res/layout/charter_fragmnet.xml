<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@color/appColorWhite">



    <LinearLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/appColorWhite"
        android:visibility="invisible"
        android:clickable="true"
        android:id="@+id/charterFragmentLinLay">
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp">
            <include
                layout="@layout/flower_icon"
                android:gravity="center_horizontal"/>
        </FrameLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal">
            <TextView
                style="@style/Body1"
                android:text="Куда:"
                android:layout_marginLeft="10dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/orderAddress"
                android:layout_marginHorizontal="10dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal">
            <TextView
                style="@style/Body1"
                android:text="Кому:"
                android:layout_marginLeft="10dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/orderReceiver"
                android:layout_marginHorizontal="10dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal">
            <TextView
                style="@style/Body1"
                android:text="Дата:"
                android:layout_marginLeft="10dp"/>
            <TextView
                style="@style/Body1"
                android:id="@+id/orderDate"
                android:layout_marginHorizontal="10dp"/>




        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal">
            <TextView
                style="@style/Body1"
                android:text="Время:"
                android:layout_marginLeft="10dp"/>
            <TextView
                style="@style/Body1"
                android:id="@+id/orderTime"
                android:layout_marginHorizontal="10dp"/>




        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:fontFamily="@font/rubik"
                android:textSize="20dp"
                android:background="@drawable/button_styles"
                android:textColor="#fff"
                android:layout_width="120dp"
                android:bottomRightRadius="20dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:id="@+id/orderGo"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true"
                android:text="Заказать"
                android:layout_marginBottom="25dp"/>
        </RelativeLayout>
    </LinearLayout>
    <ProgressBar
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:indeterminateTint="@color/colorPrimary"
        android:layout_centerInParent="true"
        android:id="@+id/charterFragmentProgressbar"/>
</RelativeLayout>
