<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/appColorWhite">
    <include layout="@layout/toolbar"/>

    <LinearLayout
        android:id="@+id/charterFragmentLinLay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/appColorWhite"
        android:clickable="true"
        android:focusable="true"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" >

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp">

            <include
                layout="@layout/flower_icon"
                android:gravity="center_horizontal" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <TextView
                style="@style/Body1"
                android:layout_marginStart="10dp"
                android:text="@string/address" />

            <EditText
                android:id="@+id/orderAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <TextView
                style="@style/Body1"
                android:layout_marginStart="10dp"
                android:text="@string/reciever" />

            <EditText
                android:id="@+id/orderReceiver"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <TextView
                style="@style/Body1"
                android:layout_marginStart="10dp"
                android:text="@string/date" />

            <TextView
                android:id="@+id/orderDate"
                style="@style/Body1"
                android:textColor="@color/appColorWhite"
                android:background="@drawable/rounded_background_blue"
                android:layout_marginHorizontal="10dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <TextView
                style="@style/Body1"
                android:layout_marginStart="10dp"
                android:text="@string/time" />

            <TextView
                android:id="@+id/orderTime"
                android:background="@drawable/rounded_background_blue"
                style="@style/Body1"
                android:layout_marginHorizontal="10dp"
                tools:text="12/12/12"
                android:textColor="@color/appColorWhite"
                android:padding="3dp" />


        </LinearLayout>





    </LinearLayout>
    <Button
        android:id="@+id/orderGo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_margin="25dp"
        android:background="@drawable/button_styles"
        android:bottomRightRadius="20dp"
        android:fontFamily="@font/rubik"
        android:text="@string/buy"
        android:textColor="#fff"
        android:textSize="20sp" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>
