<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/appColorWhite"
    android:layout_height="match_parent">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_gravity="center_horizontal">
            <include
                layout="@layout/shop_item"
                android:id="@+id/includeShopItem"
                />
            </RelativeLayout>
            <TextView
                style="@style/Subtitle1"

                android:layout_gravity="center_horizontal"
                android:textSize="30dp"
                android:id="@+id/shopPageNameShop"/>

                <TextView
                    style="@style/Subtitle1"
                    android:text="Адрес"/>
                <TextView
                    style="@style/Body1"

                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="30dp"
                    android:id="@+id/shopPageAddress"/>
                <TextView
                    style="@style/Subtitle1"
                    android:layout_marginTop="20dp"
                    android:text="Условия доставки"/>
                <TextView
                    style="@style/Body1"
                    android:layout_width="match_parent"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="30dp"

                    android:id="@+id/shopPageUslDost"
                    />
                <TextView
                    style="@style/Subtitle1"
                    android:layout_marginTop="15dp"
                    android:text="Описание"/>
                <TextView
                    style="@style/Body1"

                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="5dp"
                    android:id="@+id/shopPageAnnotation"/>
            <TextView
                style="@style/Subtitle1"
                android:text="Товыры"
                android:layout_marginBottom="20dp"/>
                <include
                    layout="@layout/grid_recycle_view"
                    />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>