<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginVertical="15dp"
        app:cardCornerRadius="20dp"
        app:cardMaxElevation="15dp"
        android:id="@+id/charterCard"
        app:cardElevation="8dp"
        android:background="@color/appColorWhite">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorPrimaryDark"
            android:layout_marginTop="80dp"/>
        <TextView
            style="@style/Headline1"
            android:text="Заказ от 02.03.20"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:id="@+id/charterItemDateText"/>
        <TextView
            style="@style/Body1"
            android:text="#154523"
            android:layout_marginTop="45dp"
            android:layout_marginLeft="15dp"
            android:id="@+id/charterItemIdOrderText"
            android:textColor="#666666"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="90dp">
            <TextView
                style="@style/Body1"
                android:text="Статус"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginLeft="6dp"
                android:layout_gravity="center"
                android:id="@+id/charterItemFrameForState">
                <TextView
                    style="@style/Headline1"
                    android:id="@+id/charterItemStateText"
                    android:layout_marginHorizontal="5dp"
                    android:text="ожидание"
                    android:textSize="18dp"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>


        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="130dp">
            <include
                layout="@layout/flower_icon"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>