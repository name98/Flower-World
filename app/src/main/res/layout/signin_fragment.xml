<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/appColorWhite"
    android:clickable="true"
    android:focusable="true">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:id="@+id/sign_in_fragment_top">

        <com.facebook.drawee.view.SimpleDraweeView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:backgroundImage="@drawable/sign_in_dec_1" />
        <TextView
            style="@style/TextAppearance.AppCompat.Headline"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:text="@string/registration"
            android:fontFamily="@font/century"
            android:textColor="@color/appColorWhite"
            android:textSize="35sp"/>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sign_in_fragment_top"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_marginStart="50dp"
            android:text="@string/first_name"
            style="@style/FW_MHeadline"/>

        <EditText
            android:id="@+id/sing_in_fragment_first_name"
            android:hint="@string/example_first_name"
            android:inputType="text"
            style="@style/general_enter_text"/>

        <TextView
            android:layout_marginStart="50dp"
            android:text="@string/second_name"
            style="@style/FW_MHeadline"/>

        <EditText
            android:id="@+id/sing_in_fragment_second_name"
            android:hint="@string/example_second_name"
            android:inputType="text"
            style="@style/general_enter_text"/>

        <TextView
            style="@style/FW_MHeadline"
            android:layout_marginStart="50dp"
            android:text="@string/patr_name" />

        <EditText
            android:id="@+id/sing_in_fragment_patr_name"
            android:hint="@string/example_patr_name"
            android:inputType="text"
            style="@style/general_enter_text"/>

        <TextView
            style="@style/FW_MHeadline"
            android:layout_marginStart="50dp"
            android:text="@string/new_email" />

        <EditText
            android:id="@+id/sign_in_fragment_email"
            style="@style/general_enter_text"
            android:layout_marginHorizontal="50dp"
            android:hint="@string/example_email"
            android:inputType="textEmailAddress"/>

        <TextView
            style="@style/FW_MHeadline"
            android:layout_marginStart="50dp"
            android:text="@string/telephone" />

        <EditText
            android:id="@+id/sign_in_fragment_telephone"
            style="@style/general_enter_text"
            android:layout_marginHorizontal="50dp"
            android:hint="+7"
            android:inputType="phone"/>

        <TextView
            style="@style/FW_MHeadline"
            android:layout_marginStart="50dp"
            android:text="@string/new_password" />

        <EditText
            android:id="@+id/sign_in_password"
            style="@style/general_enter_text"
            android:layout_marginHorizontal="50dp"
            android:inputType="textPassword" />

        <TextView
            style="@style/FW_MHeadline"
            android:layout_marginStart="50dp"
            android:text="@string/repeat_new_password" />

        <EditText
            android:id="@+id/sign_in_fragment_repeat_password"
            style="@style/general_enter_text"
            android:layout_marginHorizontal="50dp"
            android:inputType="textPassword" />

        <TextView
            android:id="@+id/login_fragment_error_auth_text_view"
            style="@style/Subtitle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/error_auth"
            android:textColor="@color/red"
            android:visibility="gone" />

        <Button
            android:id="@+id/loginFragmentEnterBt"
            android:layout_width="wrap_content"
            android:paddingHorizontal="18dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_styles"
            android:text="@string/create_user"
            android:textSize="16sp"
            android:fontFamily="@font/century"
            android:textColor="@color/appColorWhite"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:clickable="true"
            android:text="@string/log_in"
            android:textColor="@color/grey"
            android:focusable="true" />
    </LinearLayout>
</RelativeLayout>